<Window x:Class="TESTLAUNCHER.Select"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TESTLAUNCHER"
        mc:Ignorable="d"
        Title="Select" Height="450" Width="800" ResizeMode="NoResize" Icon="devil.ico" Topmost="True">
    <Grid>
        <Button x:Name="button" Content="Играть" Margin="322,0,0,5" Width="150" RenderTransformOrigin="0.5,0.5" FontFamily="Impact" FontSize="18" Background="#FFF3FF00" BorderBrush="Black" Height="35" MaxWidth="150" MaxHeight="35" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <Button.Effect>
                <DropShadowEffect ShadowDepth="3"/>
            </Button.Effect>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-10.305"/>
                    <RotateTransform/>
                    <TranslateTransform X="1.818"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>
